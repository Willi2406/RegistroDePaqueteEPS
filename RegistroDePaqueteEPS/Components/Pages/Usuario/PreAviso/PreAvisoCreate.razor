@page "/preavisousuario/create"
@inject NavigationManager NavManager
@rendermode InteractiveServer

<SectionContent SectionName="TituloPagina">
    <h1>PRE-AVISO</h1>
</SectionContent>

<div class="glass-container create-preaviso-view">

    <div class="header-actions">
        <a href="/preavisousuario" class="btn-back">
            <i class="bi bi-arrow-left"></i> Regresar al Listado
        </a>
    </div>

    <div class="form-content">
        <h3 class="section-title">Registrar Nuevo Paquete</h3>

        <EditForm Model="NuevoPreAviso" OnValidSubmit="GuardarPreAviso">
            <DataAnnotationsValidator />

            <div class="form-grid">
                <div class="input-group">
                    <label>Tracking Number</label>
                    <InputText @bind-Value="NuevoPreAviso.Tracking" class="input-box" placeholder="Ej: 1Z999..." />
                </div>
                <div class="input-group">
                    <label>Transportista</label>
                    <InputSelect @bind-Value="NuevoPreAviso.Transportista" class="input-box">
                        <option value="">Seleccione...</option>
                        <option value="Amazon Logistics">Amazon Logistics</option>
                        <option value="UPS">UPS</option>
                        <option value="FedEx">FedEx</option>
                        <option value="USPS">USPS</option>
                        <option value="DHL">DHL</option>
                        <option value="Lasership">Lasership</option>
                        <option value="Otro">Otro</option>
                    </InputSelect>
                </div>

                <div class="input-group">
                    <label>Tienda / Suplidor</label>
                    <InputText @bind-Value="NuevoPreAviso.Tienda" class="input-box" placeholder="Ej: Amazon, Shein" />
                </div>
                <div class="input-group">
                    <label>Valor (USD)</label>
                    <InputNumber @bind-Value="NuevoPreAviso.Valor" class="input-box" placeholder="0.00" />
                </div>

                <div class="input-group">
                    <label>Contenido</label>
                    <InputText @bind-Value="NuevoPreAviso.Contenido" class="input-box" placeholder="Ej: Ropa, Zapatos" />
                </div>

                <div class="input-group">
                    <label>Factura (PDF/Imagen)</label>
                    <div class="file-upload-box">
                        <i class="bi bi-cloud-upload"></i>
                        <span>Adjuntar Archivo</span>
                        <InputFile OnChange="ManejarArchivo" class="file-input-hidden" />
                    </div>
                </div>
            </div>

            <div class="action-buttons">
                <button type="button" class="btn-cancel" @onclick="Cancelar">Cancelar</button>
                <button type="submit" class="btn-save">Crear Pre-Aviso</button>
            </div>

        </EditForm>
    </div>

</div>

@code {
    public class PreAvisoForm
    {
        public string Tracking { get; set; }
        public string Transportista { get; set; }
        public string Tienda { get; set; }
        public decimal Valor { get; set; }
        public string Contenido { get; set; }
        // El peso no suele ser obligatorio en pre-aviso (lo pone la transportadora)
    }

    public PreAvisoForm NuevoPreAviso { get; set; } = new PreAvisoForm();

    private void GuardarPreAviso()
    {
        // Lógica de guardado...
        NavManager.NavigateTo("/preavisousario");
    }

    private void Cancelar()
    {
        NavManager.NavigateTo("/preavisousuario");
    }

    private void ManejarArchivo(InputFileChangeEventArgs e)
    {
        // Lógica para manejar el archivo adjunto
    }
}