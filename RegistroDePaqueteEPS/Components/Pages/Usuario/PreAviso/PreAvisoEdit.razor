@page "/preavisousuario/edit/{Id:int}"
@inject NavigationManager NavManager
@rendermode InteractiveServer

<SectionContent SectionName="TituloPagina">
    <h1>PRE-AVISO</h1>
</SectionContent>

<div class="glass-container edit-preaviso-view">

    <div class="header-actions">
        <a href="/preavisousuario" class="btn-back">
            <i class="bi bi-arrow-left"></i> Regresar al Listado
        </a>
    </div>

    <div class="form-content">
        <h3 class="section-title">Editar Paquete #@Id</h3>

        <EditForm Model="PreAvisoEditar" OnValidSubmit="GuardarCambios">
            <DataAnnotationsValidator />

            <div class="form-grid">
                <div class="input-group">
                    <label>Tracking Number</label>
                    <InputText @bind-Value="PreAvisoEditar.Tracking" class="input-box" />
                </div>
                <div class="input-group">
                    <label>Transportista</label>
                    <InputSelect @bind-Value="PreAvisoEditar.Transportista" class="input-box">
                        <option value="">Seleccione...</option>
                        <option value="Amazon Logistics">Amazon Logistics</option>
                        <option value="UPS">UPS</option>
                        <option value="FedEx">FedEx</option>
                        <option value="USPS">USPS</option>
                        <option value="DHL">DHL</option>
                        <option value="Lasership">Lasership</option>
                        <option value="Otro">Otro</option>
                    </InputSelect>
                </div>

                <div class="input-group">
                    <label>Tienda / Suplidor</label>
                    <InputText @bind-Value="PreAvisoEditar.Tienda" class="input-box" />
                </div>
                <div class="input-group">
                    <label>Valor (USD)</label>
                    <InputNumber @bind-Value="PreAvisoEditar.Valor" class="input-box" />
                </div>

                <div class="input-group">
                    <label>Contenido</label>
                    <InputText @bind-Value="PreAvisoEditar.Contenido" class="input-box" />
                </div>

                <div class="input-group">
                    <label>Factura</label>
                    <div class="file-upload-box">
                        <i class="bi bi-file-earmark-check"></i>
                        <span>Reemplazar Archivo</span>
                        <InputFile OnChange="ManejarArchivo" class="file-input-hidden" />
                    </div>
                    @if (!string.IsNullOrEmpty(NombreArchivoActual))
                    {
                        <div class="current-file">
                            <small>Archivo actual: <strong>@NombreArchivoActual</strong></small>
                        </div>
                    }
                </div>
            </div>

            <div class="action-buttons">
                <button type="button" class="btn-cancel" @onclick="Cancelar">Cancelar</button>
                <button type="submit" class="btn-save">Guardar Cambios</button>
            </div>

        </EditForm>
    </div>

</div>

@code {
    [Parameter]
    public int Id { get; set; }

    public class PreAvisoForm
    {
        public int Id { get; set; }
        public string Tracking { get; set; }
        public string Transportista { get; set; }
        public string Tienda { get; set; }
        public decimal Valor { get; set; }
        public string Contenido { get; set; }
    }

    public PreAvisoForm PreAvisoEditar { get; set; } = new PreAvisoForm();
    public string NombreArchivoActual { get; set; } = "Factura_Amazon.pdf"; // Simulado

    protected override void OnInitialized()
    {
        // AQUÍ CARGARÍAS LOS DATOS REALES DESDE LA BD USANDO EL ID
        if (Id > 0)
        {
            // Datos simulados para ver la edición
            PreAvisoEditar = new PreAvisoForm
            {
                Id = Id,
                Tracking = "1Z999AA10123456784",
                Transportista = "UPS",
                Tienda = "Amazon",
                Valor = 150.00m,
                Contenido = "Ropa y Accesorios"
            };
        }
    }

    private void GuardarCambios()
    {
        // Lógica de actualización...
        NavManager.NavigateTo("/preavisousuario");
    }

    private void Cancelar()
    {
        NavManager.NavigateTo("/preavisousuario");
    }

    private void ManejarArchivo(InputFileChangeEventArgs e)
    {
        NombreArchivoActual = e.File.Name;
    }
}