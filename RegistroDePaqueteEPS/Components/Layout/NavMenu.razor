@implements IDisposable
@inject NavigationManager NavigationManager
@using Microsoft.AspNetCore.Components.Authorization

<div class="nav-card">
    <nav class="flex-column">

        <div class="nav-item">
            <NavLink class="nav-link" href="/Inicio">
                <i class="bi bi-house-door-fill nav-icon"></i>
                <span class="nav-text">Inicio</span>
            </NavLink>
        </div>

        <div class="nav-item">
            <NavLink class="nav-link" href="paquetesusuario">
                <i class="bi bi-box-seam-fill nav-icon"></i>
                <span class="nav-text">Paquetes</span>
            </NavLink>
        </div>

        <div class="nav-item">
            <NavLink class="nav-link" href="preavisousuario">
                <i class="bi bi-megaphone-fill nav-icon"></i>
                <span class="nav-text">Pre-Aviso</span>
            </NavLink>
        </div>

        <AuthorizeView Roles="Admin">
            <Authorized>
                <div class="nav-item">
                    <NavLink class="nav-link" href="destinatario">
                        <i class="bi bi-person-fill nav-icon"></i>
                        <span class="nav-text">Destinatario</span>
                    </NavLink>
                </div>

                <div class="nav-item">
                    <NavLink class="nav-link" href="reporte">
                        <i class="bi bi-credit-card-fill nav-icon"></i>
                        <span class="nav-text">Reporte</span>
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item">
                    <NavLink class="nav-link" href="cuenta">
                        <i class="bi bi-person-circle nav-icon"></i>
                        <span class="nav-text">Cuenta (@context.User.Identity?.Name)</span>
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <div class="nav-footer">
            <img src="/Imagenes/EPS_Barra_Lateral.png" class="toggle-logo" alt="Menú" />
        </div>

    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
